BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            font_size: 48

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 100

            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)

    Button:
        text: 'Convert miles to km'
        font_size: 24
        background_color: (0.3, 0.3, 0.3, 1)
        color: (1, 1, 1, 1)
        on_press: app.handle_convert(input_miles.text)

    Label:
        text: app.output_text
        font_size: 48
        color: (1, 1, 0, 1)
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
