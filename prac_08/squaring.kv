BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:  # Top horizontal section
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False

        Button:
            text: 'Square'
            size_hint_x: None
            width: 100
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            text: ''
            font_size: 48
            color: (1, 0.75, 0.8, 1)  # pink (RGBA)

    Label:  # Bottom section
        text: 'Enter a number and press "Square".'
        size_hint_y: None
        height: 30
